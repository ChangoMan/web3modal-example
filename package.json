  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@walletconnect/web3-provider": "^1.6.6",
    "ethers": "^5.5.1",
    "next": "latest",
    "react": "^17.0.2",
